<FlatButton@ButtonBehavior+Label>:
	text: "default"

<AdminWindow>
	id: main_win
	orientation: "vertical"
	canvas.before:
		Color:
			rgba: (1, 1, 1, 1)
		Rectangle:
			size: self.size
			pos: self.pos

	BoxLayout:
		id: top_nav
		size_hint_y: None
		height: 30
		canvas.before:
			Color:
				rgba: (0.06, 0.45, 0.45, 1)
			Rectangle:
				size: self.size
				pos: self.pos

		FlatButton:
			id: file_trigger
			text: 'File'
			on_release: file_dropdown.open(self)
			size_hint: (0.1, None)
			height: 30

			Widget:
				on_parent: file_dropdown.dismiss()

				DropDown:
					id: file_dropdown
					Button:
						id: close
						text: "quit"
						size_hint_y: None
						height: 30

		Label:
			text: "Admin Dashboard"
			bold: True
			size_hint: (0.9, None)
			height: 30

	BoxLayout:
		id: content_nav

		BoxLayout:
			id: nav_tabs
			orientation: "vertical"
			size_hint_x: 0.2
			spacing: 3
			canvas.before:
				Color:
					rgba: (0.06, 0.40, 0.40, 1)
				Rectangle:
					size: self.size
					pos: self.pos

			ToggleButton:
				id: user_toggle
				text: "Manage Users"
				size_hint_y: 0.1
				state: "down"
				background_color: (0.06, 0.47, 0.47, 1)
				background_normal: ''

			ToggleButton:
				id: user_toggle
				text: "Manage Products"
				size_hint_y: 0.1
				background_color: (0.06, 0.47, 0.47, 1)
				background_normal: ''

			ToggleButton:
				id: user_toggle
				text: "Product Analysis"
				size_hint_y: 0.1
				background_color: (0.06, 0.47, 0.47, 1)
				background_normal: ''

			Label:
				id: sp
				text: ""
				size_hint_y: 0.7

		BoxLayout:
			id: content
			size_hint_x: 0.8